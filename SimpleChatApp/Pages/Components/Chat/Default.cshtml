@model IReadOnlyCollection<SimpleChatApp.Domain.Message>

<div class="row">
    <div id="message-box" class="col-md-12">
        @foreach (var message in Model)
        {
            <div>@message.AuthorName: @message.Content</div>
        }
    </div>
</div>
<div class="row">
    <input id="name-input" class="input-group-text col-md-2" placeholder="Name"/>
    <input id="text-input" class="input-group-text col-md" placeholder="Message"/>
    <div id="send-button" class="btn btn-dark col-md-3">Send</div>
</div>